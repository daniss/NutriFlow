# Production Environment Variables Template
# Copy this to .env and fill in the real values

# Database Configuration
POSTGRES_DB=nutriflow_db
POSTGRES_USER=nutriflow_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# FastAPI Configuration
DATABASE_URL=postgresql://nutriflow_user:CHANGE_THIS_STRONG_PASSWORD@db:5432/nutriflow_db
SECRET_KEY=GENERATE_STRONG_SECRET_KEY_HERE
ENVIRONMENT=production

# CORS Configuration (your actual domains)
ALLOWED_ORIGINS=https://nutriflow.fr,https://www.nutriflow.fr

# Rate Limiting
RATE_LIMIT_REQUESTS=3
RATE_LIMIT_WINDOW=300

# Generate secure values with:
# SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(64))"
# PASSWORD: python -c "import secrets; print(secrets.token_urlsafe(32))"
